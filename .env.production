# Production Environment Variables
# Replace all placeholder values with actual production credentials

# Database Configuration
DATABASE_URL="postgresql://username:password@host:5432/database_name"
POSTGRES_URL="postgresql://username:password@host:5432/database_name"

# Database Pool Configuration (Production - optimized for high load)
DB_POOL_MAX=50
DB_POOL_IDLE_TIMEOUT=60000
DB_POOL_CONNECTION_TIMEOUT=5000
DB_STATEMENT_TIMEOUT=60000
DB_QUERY_TIMEOUT=60000

# Redis Configuration
REDIS_URL="redis://username:password@host:6379"

# Authentication & Security
JWT_SECRET="your-production-jwt-secret-32-chars-minimum"
NEXTAUTH_SECRET="your-production-nextauth-secret-32-chars"
NEXTAUTH_URL="https://nearestnice.weather"

# CORS Configuration (Production - strict)
CORS_ALLOWED_ORIGINS="https://nearestnice.weather,https://www.nearestnice.weather,https://app.nearestnice.weather"

# Application Settings
ENVIRONMENT="production"
NODE_ENV="production"
DEBUG="false"
LOG_LEVEL="warn"
API_PREFIX="/api/v1"

# API Configuration (Production)
VITE_API_BASE_URL="https://api.nearestnice.weather"
VITE_API_TIMEOUT=30000

# Map Configuration (Production - optimized)
VITE_MAP_CENTER_LAT=46.7296
VITE_MAP_CENTER_LNG=-94.6859
VITE_MAP_ZOOM=6
VITE_MAP_TILE_URL="https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png"
VITE_MAP_ATTRIBUTION="&copy; <a href=\"https://www.openstreetmap.org/copyright\">OpenStreetMap</a> contributors"

# CDN Configuration (Production - use own CDN if available)
VITE_CDN_BASE_URL="https://cdn.nearestnice.weather"
VITE_LEAFLET_VERSION="1.7.1"

# Weather API Keys
OPENWEATHER_API_KEY="your-openweather-api-key"
WEATHER_API_KEY="your-weather-api-key"
VISUAL_CROSSING_API_KEY="your-visual-crossing-api-key"

# Map Services
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
MAPBOX_ACCESS_TOKEN="your-mapbox-access-token"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
EMAIL_FROM="noreply@nearestnice.weather"

# Analytics & Monitoring
NEXT_PUBLIC_GA_MEASUREMENT_ID="your-google-analytics-id"
VERCEL_ANALYTICS_ID="your-vercel-analytics-id"

# Docker Configuration (Production versions)
DIRECTUS_VERSION=10.10.4
REDIS_VERSION=7-alpine
POSTGRES_VERSION=15-3.3

# Rate Limiting (Production - stricter)
RATE_LIMIT_WINDOW=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Security Headers
SECURITY_HEADERS_ENABLED=true
CSP_REPORT_URI="https://nearestnice.weather/api/csp-report"

# Performance Optimization
CACHE_MAX_AGE=3600  # 1 hour
STATIC_CACHE_MAX_AGE=31536000  # 1 year
API_CACHE_TTL=300  # 5 minutes

# Monitoring & Observability
HEALTH_CHECK_INTERVAL=30000  # 30 seconds
ERROR_REPORTING_ENABLED=true
PERFORMANCE_MONITORING_ENABLED=true