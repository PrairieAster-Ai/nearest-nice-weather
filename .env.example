# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Database Configuration
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/weather_intelligence"
POSTGRES_URL="postgresql://postgres:postgres@localhost:5432/weather_intelligence"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# Authentication & Security
JWT_SECRET="your-jwt-secret-here-minimum-32-characters"
NEXTAUTH_SECRET="your-nextauth-secret-here-32-chars"
NEXTAUTH_URL="http://localhost:3000"

# Weather API Keys (Get from providers)
OPENWEATHER_API_KEY="your-openweather-api-key"
WEATHER_API_KEY="your-weather-api-key"
VISUAL_CROSSING_API_KEY="your-visual-crossing-api-key"

# Map Services
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
MAPBOX_ACCESS_TOKEN="your-mapbox-access-token"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
EMAIL_FROM="noreply@localhost"

# Analytics & Monitoring (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID="your-google-analytics-id"
VERCEL_ANALYTICS_ID="your-vercel-analytics-id"

# Application Settings
ENVIRONMENT="development"
NODE_ENV="development"
DEBUG="true"
LOG_LEVEL="debug"

# CORS & Security
CORS_ORIGIN="http://localhost:3000,http://localhost:8000"
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8000"

# Rate Limiting
RATE_LIMIT_WINDOW="900000"  # 15 minutes
RATE_LIMIT_MAX_REQUESTS="1000"