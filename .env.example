# Nearest Nice Weather - Environment Variables Template
# Copy this file to .env and fill in your actual values

# === DATABASE CONFIGURATION ===
# LOCALHOST DEVELOPMENT: Use Neon development branch
# Get this from your Neon dashboard: https://console.neon.tech/ -> Branches -> development
DATABASE_URL="postgresql://neondb_owner:your_password@ep-development-xxxxx.region.neon.tech/neondb?sslmode=require"

# Alternative database URL name (Vercel deployment uses this)
POSTGRES_URL="postgresql://neondb_owner:your_password@ep-development-xxxxx.region.neon.tech/neondb?sslmode=require"

# PRODUCTION/PREVIEW: Use Neon production branch
# Get this from your Neon dashboard: https://console.neon.tech/ -> Branches -> main
# DATABASE_URL="postgresql://neondb_owner:your_password@ep-production-xxxxx.region.neon.tech/neondb?sslmode=require"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# Authentication & Security
JWT_SECRET="your-jwt-secret-here-minimum-32-characters"
NEXTAUTH_SECRET="your-nextauth-secret-here-32-chars"
NEXTAUTH_URL="http://localhost:3000"

# Weather API Keys (Get from providers)
OPENWEATHER_API_KEY="your-openweather-api-key"
WEATHER_API_KEY="your-weather-api-key"
VISUAL_CROSSING_API_KEY="your-visual-crossing-api-key"

# === API CONFIGURATION ===
# For local development, proxy API calls to production (default)
VITE_API_PROXY_URL="https://www.nearestniceweather.com"

# Alternative: Use local API server (if running Vercel dev)
# VITE_API_PROXY_URL="http://localhost:4000"

# Frontend development server configuration
VITE_DEV_PORT="3002"
VITE_DEV_HOST="0.0.0.0"

# Map Services
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
MAPBOX_ACCESS_TOKEN="your-mapbox-access-token"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
EMAIL_FROM="noreply@localhost"

# Analytics & Monitoring (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID="your-google-analytics-id"
VERCEL_ANALYTICS_ID="your-vercel-analytics-id"

# Application Settings
ENVIRONMENT="development"
NODE_ENV="development"
DEBUG="true"
LOG_LEVEL="debug"

# CORS & Security
CORS_ORIGIN="http://localhost:3000,http://localhost:8000"
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8000"

# Rate Limiting
RATE_LIMIT_WINDOW="900000"  # 15 minutes
RATE_LIMIT_MAX_REQUESTS="1000"