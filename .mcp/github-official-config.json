{
  "mcp": {
    "servers": {
      "github-official": {
        "command": "docker",
        "args": [
          "run", "-i", "--rm",
          "-e", "GITHUB_PERSONAL_ACCESS_TOKEN=${GITHUB_TOKEN}",
          "-e", "GITHUB_TOOLSETS=repos,issues,pull_requests,actions",
          "ghcr.io/github/github-mcp-server"
        ]
      }
    }
  }
}
