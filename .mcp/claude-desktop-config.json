{
  "mcpServers": {
    "github-official": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN=${GITHUB_TOKEN}",
        "-e",
        "GITHUB_TOOLSETS=repos,issues,pull_requests",
        "ghcr.io/github/github-mcp-server",
        "stdio"
      ]
    },
    "github-project-manager": {
      "command": "mcp-github-project-manager",
      "args": [
        "--owner",
        "PrairieAster-Ai",
        "--repo",
        "nearest-nice-weather"
      ],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      }
    },
    "chrome-tools": {
      "command": "node",
      "args": [
        "./node_modules/@nicholmikey/chrome-tools/dist/index.js"
      ],
      "env": {
        "CHROME_DEBUG_URL": "http://localhost:9222",
        "CHROME_CONNECTION_TYPE": "direct"
      }
    },
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ],
      "env": {
        "PLAYWRIGHT_CONFIG": "./playwright.config.js",
        "PLAYWRIGHT_BASE_URL": "http://localhost:3001",
        "PLAYWRIGHT_WORKERS": "4",
        "PLAYWRIGHT_PROJECT_DIR": "/home/robertspeer/Projects/GitRepo/nearest-nice-weather",
        "PLAYWRIGHT_TEST_DIR": "./tests",
        "PLAYWRIGHT_TIMEOUT": "30000",
        "PLAYWRIGHT_REPORTER": "list",
        "PLAYWRIGHT_BROWSER": "chromium"
      }
    },
    "memory-bank": {
      "command": "npx",
      "args": [
        "@movibe/memory-bank-mcp",
        "--mode",
        "code",
        "--path",
        "/home/robertspeer/Projects/GitRepo/nearest-nice-weather",
        "--folder",
        "memory-bank",
        "--githubProfileUrl",
        "https://github.com/PrairieAster-Ai"
      ]
    },
    "neon-database": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://mcp.neon.tech/mcp"
      ],
      "env": {
        "NEON_DATABASE_URL": "${DATABASE_URL}",
        "NEON_PROJECT_ID": "${NEON_PROJECT_ID}",
        "NEON_API_KEY": "${NEON_API_KEY}",
        "DATABASE_URL": "${DATABASE_URL}"
      }
    },
    "vercel": {
      "command": "npx",
      "args": [
        "@mistertk/vercel-mcp@latest"
      ],
      "env": {
        "VERCEL_PROJECT_NAME": "nearest-nice-weather",
        "VERCEL_ORG_ID": "roberts-projects-3488152a",
        "VERCEL_PROJECT_ID": "nearest-nice-weather",
        "VERCEL_TEAM_ID": "roberts-projects-3488152a",
        "VERCEL_INTEGRATION_STATUS": "100% - Enhanced with project details",
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      }
    }
  }
}
