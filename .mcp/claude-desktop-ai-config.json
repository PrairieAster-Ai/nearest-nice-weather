{
  "mcpServers": {
    "github-official": {
      "command": "docker",
      "args": [
        "run", "-i", "--rm",
        "-e", "GITHUB_PERSONAL_ACCESS_TOKEN=${GITHUB_TOKEN}",
        "-e", "GITHUB_TOOLSETS=repos,issues,pull_requests",
        "ghcr.io/github/github-mcp-server",
        "stdio"
      ]
    },
    "github-project-manager-ai": {
      "command": "mcp-github-project-manager",
      "args": [
        "--env-file", "/home/robertspeer/Projects/GitRepo/nearest-nice-weather/.mcp/ai-env",
        "--verbose"
      ],
      "env": {
        "NODE_ENV": "production"
      }
    }
  }
}