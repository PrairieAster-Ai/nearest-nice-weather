{
  "mcp": {
    "mcpVersion": "2024-11-05",
    "servers": {
      "github-official": {
        "command": "docker",
        "args": [
          "run", "-i", "--rm",
          "-e", "GITHUB_PERSONAL_ACCESS_TOKEN=${GITHUB_TOKEN}",
          "-e", "GITHUB_TOOLSETS=repos,issues,pull_requests,actions,projects",
          "ghcr.io/github/github-mcp-server",
          "stdio"
        ],
        "description": "Official GitHub MCP server for standard GitHub operations",
        "capabilities": {
          "issues": true,
          "projects": true,
          "repos": true,
          "pull_requests": true,
          "actions": true
        }
      },
      "github-project-manager": {
        "command": "mcp-github-project-manager",
        "args": [
          "--token", "${GITHUB_TOKEN}",
          "--owner", "PrairieAster-Ai",
          "--repo", "nearest-nice-weather"
        ],
        "description": "Advanced AI-powered GitHub project management server",
        "capabilities": {
          "ai_project_planning": true,
          "automated_prd_generation": true,
          "intelligent_task_breakdown": true,
          "story_point_estimation": true,
          "risk_assessment": true,
          "business_impact_analysis": true
        }
      }
    },
    "client": {
      "description": "Dual MCP server configuration for NearestNiceWeather MVP management",
      "usage": {
        "github_official": "Use for standard GitHub operations, issue management, and project boards",
        "project_manager": "Use for AI-powered planning, PRD generation, and advanced project insights"
      },
      "workflows": {
        "sprint_planning": "github-project-manager",
        "issue_management": "github-official",
        "prd_generation": "github-project-manager",
        "task_breakdown": "github-project-manager",
        "status_reporting": "github-official"
      }
    }
  }
}
