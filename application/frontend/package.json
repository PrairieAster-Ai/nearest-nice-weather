{
  "name": "nearest-nice-weather-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:stable": "next dev --hostname 127.0.0.1 --port 3000",
    "dev:test": "next dev --hostname 127.0.0.1 --port 3003",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "analyze": "madge --circular src/",
    "lint:deps": "dependency-cruiser src/",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:watch": "playwright test --watch tests/manual-browser-accessibility.spec.ts tests/weather-app-simple.spec.ts --project=chromium",
    "test:fast": "playwright test tests/weather-app-fast.spec.ts --project=chromium",
    "test:critical": "playwright test tests/manual-browser-accessibility.spec.ts tests/weather-app-simple.spec.ts --project=chromium",
    "test:report": "playwright show-report",
    "check:patterns": "node scripts/check-styling-patterns.js",
    "validate:patterns": "node scripts/validate-patterns.js",
    "validate:imports": "node scripts/validate-imports.js",
    "validate:api": "node scripts/validate-api-contracts.js",
    "validate:build": "node scripts/validate-build-smoke.js",
    "validate:all": "npm run validate:imports && npm run validate:api && npm run validate:build && npm run check:patterns",
    "validate:fast": "node scripts/fast-validation-suite.js",
    "precommit": "npm run validate:fast && npm run lint",
    "validate": "../../scripts/validate-website.sh",
    "watch": "../../scripts/watch-changes.sh",
    "prepare": "husky"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^7.1.2",
    "@mui/material": "^7.1.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-toast": "^1.2.14",
    "@tailwindcss/postcss": "^4.1.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/leaflet": "^1.9.19",
    "@vercel/analytics": "^1.5.0",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.523.0",
    "next": "14.0.4",
    "postcss": "^8.5.6",
    "react": "^18",
    "react-dom": "^18",
    "react-leaflet": "^4.2.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.10"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.1",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "dependency-cruiser": "^16.10.3",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "madge": "^8.0.0",
    "typescript": "^5"
  }
}
